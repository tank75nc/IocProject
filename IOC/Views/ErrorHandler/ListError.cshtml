@model IEnumerable<IOC.Models.ErrorModel>

@{
    ViewBag.Title = "Error List";
}

<h2>Application Error has been handled</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ErrorCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ErrorText)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ErrorCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrorText)
            </td>
        </tr>
    }
</table>
        

